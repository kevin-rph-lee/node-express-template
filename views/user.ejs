<!-- Update Password Modal -->
<div id="updatePasswordModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Update Password Modal content-->
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h1>Update Password</h1>
        <form id="newPassword-form">
          <div class="form-group">
            <label for="currentPassword">Current Password</label>
            <input type="password" class="form-control" id="currentPassword" placeholder="Current Password">
            <label for="newPassword1">New Password</label>
            <input type="password" class="form-control" id="newPassword1" placeholder="New Password">
            <label for="newPassword2">Confirm New Password</label>
            <input type="password" class="form-control" id="newPassword2" placeholder="Confirm New Password">
          </div>
          <button type="submit" class="btn btn-primary" id="newPassword-submit">Submit</button>
        </form>
      </div>
      <div class="newPassword-alert"></div>
    </div>
  </div>
</div>
